{% block covers %}

	{% if ( covers ) %}

		{% if ( covers_view == '1' ) %}
			{% set covers_view_class = 'show-3-covers' %}
		{% elseif ( covers_view == '2' ) %}
			{% set covers_view_class = 'show-6-covers' %}
		{% else %}
			{% set covers_view_class = 'show-all-covers' %}
		{% endif %}

		<section class="block covers-block take-action-covers-block {{ covers_view_class }}">
			<div class="container">

				{% if ( fields.title ) %}
					<header>
						<h2 class="page-section-header">{{ fields.title }}</h2>
					</header>
				{% endif %}
				{% if ( fields.description ) %}
					<div class="page-section-description">{{ fields.description|e('wp_kses_post')|wpautop|raw }}</div>
				{% endif %}

				<div class="row limit-visibility">
					{% for cover in covers %}
						<div class="col-lg-4 col-md-6 cover-card-column">
							<div class="cover-card card-one" style="background-image: url({{ cover.image }});">
								<a
									class="cover-card-overlay"
									data-ga-category="Take Action Covers"
									data-ga-action="Image"
									data-ga-label="n/a"
									href="{{ cover.button_link|default('#') }}"
									aria-label="{{ __( 'Take action cover, link to ' ~ cover.title, 'planet4-blocks' ) }}"
								/>
								<div class="cover-card-content">
									{% if ( cover.tags ) %}
										{% for tag in cover.tags %}
											<a
												class="cover-card-tag"
												data-ga-category="Take Action Covers"
												data-ga-action="Navigation Tag"
												data-ga-label="n/a"
												href="{{ tag.href|e('esc_url') }}"
											>
												<span aria-label="hashtag">#</span>{{ tag.name|e('wp_kses_post')|raw }}
											</a>
										{% endfor %}
									{% endif %}
									<a
										class="cover-card-heading"
										data-ga-category="Take Action Covers"
										data-ga-action="Title"
										data-ga-label="n/a"
										href="{{ cover.button_link|default('#') }}"
									>
										{{ cover.title|e('wp_kses_post')|raw }}
									</a>
									<p>{{ cover.excerpt|truncate(20)|e('wp_kses_post')|raw }}</p>
								</div>
								<a
									class="btn btn-action btn-block cover-card-btn"
									data-ga-category="Take Action Covers"
									data-ga-action="Call to Action"
									data-ga-label="n/a"
									href="{{ cover.button_link|default('#') }}"
								>
									{{ cover.button_text }}
								</a>
							</div>
						</div>
					{% endfor %}
				</div>

				{% if ( fields.button_text ) %}
					<div class="row">
						{% if ( ( covers|length > 3 and covers_view == '1' ) or
								( covers|length > 6 and covers_view == '2' ) ) %}
							<div class="col-lg-5 col-md-12 load-more-covers-button-div">
								<button class="btn btn-block btn-secondary btn-load-more-covers-click">{{ fields.button_text }}</button>
							</div>
						{% elseif ( ( covers|length == 3 and covers_view == '1' ) or
									( covers|length in [5,6] and covers_view == '2' ) or
									( covers|length > 4 and covers_view == '3' )) %}
							<div class="col-lg-5 col-md-12 load-more-covers-button-div d-lg-none">
								<button class="btn btn-block btn-secondary btn-load-more-covers-click">{{ fields.button_text }}</button>
							</div>
						{% endif %}
					</div>
				{% endif %}

			</div>
		</section>
	{% endif %}

{% endblock %}
