{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "jest": true
  },
  "extends":[
    "plugin:@wordpress/eslint-plugin/recommended"
  ],
  "globals": {
    "page": true,
    "browser": true,
    "wp": "readonly"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "curly": [
      "error",
      "all"
    ],
    "one-var-declaration-per-line": [
      "error",
      "always"
    ],
    "prefer-arrow-callback": [
      "error", {
        "allowNamedFunctions": true
      }
    ],
    "camelcase": "off",
    "new-cap": "error",
    "no-var": 1,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/jsx-indent": "off",
    "no-mixed-spaces-and-tabs": "off",
    "react/jsx-indent-props": "off",
    "react-hooks/rules-of-hooks": "off"
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ]
}
